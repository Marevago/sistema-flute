<IfModule mod_rewrite.c>
  RewriteEngine On
  # Não força HTTPS em localhost (MAMP)
  RewriteCond %{HTTP_HOST} !^localhost(:[0-9]+)?$ [NC]
  RewriteCond %{HTTPS} off
  RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# Evita listagem de diretórios
Options -Indexes

# Define arquivos padrão (evita 403 se o servidor não listar diretórios)
DirectoryIndex index.php index.html index.htm

# Observação:
# Headers e Expires foram removidos para evitar erro 500 em ambientes
# onde os módulos não estão habilitados (comuns no MAMP). Em produção,
# podemos reativar com segurança via <IfModule>.
